# ================================
# .env.example - Updated with Vision Model
# ================================

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini
OPENAI_VISION_MODEL=gpt-4o
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=2000
OPENAI_TIMEOUT=30000
OPENAI_BASE_URL=https://api.openai.com/v1

# HuggingFace Configuration
HUGGINGFACE_API_KEY=
HUGGINGFACE_MODEL_NAME=model-name-here

# Semantic Scholar Configuration
SEMANTIC_SCHOLAR_API_KEY=your-semantic-scholar-api-key-here
SEMANTIC_SCHOLAR_BASE_URL=https://api.semanticscholar.org/graph/v1
SEMANTIC_SCHOLAR_TIMEOUT=10000

# ORKG Configuration
ORKG_SERVER_URL=https://orkg.org
ORKG_API_URL=https://orkg.org/api
ORKG_NLP_SERVICE_URL=https://orkg.org/nlp/api
ORKG_TIMEOUT=10000
ORKG_SIMILARITY_THRESHOLD=0.5
ORKG_CHUNK_SIZE=20

# ORKG OAuth2 Credentials
ORKG_CLIENT_ID=orkg-client
ORKG_CLIENT_SECRET=secret
ORKG_USERNAME=your_user
ORKG_PASSWORD=your_password

# CrossRef Configuration
CROSSREF_BASE_URL=https://api.crossref.org/works
CROSSREF_TIMEOUT=10000

# ArXiv Configuration
ARXIV_BASE_URL=http://export.arxiv.org/api/query
ARXIV_TIMEOUT=15000

# Debug Configuration
DEBUG_MODE=false
LOG_LEVEL=info